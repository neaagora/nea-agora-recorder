{
  "manifest_version": 3,
  "name": "Nea Agora Recorder",
  "version": "0.0.1",
  "description": "Local recorder for AI agent service behavior (MVP).",
  "action": {
    "default_title": "Nea Agora Recorder",
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "storage",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "http://localhost:18789/*",
        "http://127.0.0.1:18789/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
